<view class='flex-mid topbar'>
  <text wx:for="{{toptab}}" class="tabName tabtitle {{currentTab==index ? 'select-t' : ''}}"
        bindtap="changetab" data-id="{{index}}"
  >{{item}}</text>
</view>

<swiper current="{{currentTab}}" duration="300" bindchange="switchTab" style="height:{{tbodyHeight-35}}px">
  <!--topbar高35px-->
  <!--广场-->
  <swiper-item>

    
    <view class='wrapper_s'>
      <!--搜索-->
      <form bindsubmit='formSubmit' class='form flex-mid'>
        <view class='wrapper_input'>
          <view class="iconfont icon-sousuo-tianchong icon_s"></view>
          <input type='text' name="keyword" class='input_search' placeholder='输入关键词搜索' />
        </view>
        <button form-type='submit' class='btn_search'>搜索</button>
        <button class='btn_search' bindtap="showall">全部</button>
      </form>
    </view>
    <!--搜索结果-->
    <scroll-view style="height: {{tbodyHeight-35-55}}px" scroll-y scroll-with-animation>
      <!--wrapper_s占据55px-->
      <view class='resultshow'>
        <!--显示全部-->
        <block wx:if="{{reshow == 1}}">
          <block wx:for="{{invitations}}" wx:key="inv">
            <view class='wrapper-inv flex-mid'>
              <view class='inv'>
                <view class='line1'>
                  <text class='wrappertags'>
                      <text class="usex iconfont {{item.sex == '男'? 'icon-nan': 'icon-nv'}}"></text>
                  <text class='uname'>{{item.user_name}} </text>
                  <text class='umajor'>{{item.major}}</text>
                  </text>

                </view>
                <view class='line2'>{{item.illustration}}</view>
                <view class='line3 flex-row'>
                  <view wx:for="{{item.key_words}}" wx:for-item="keyword">
                    <text class="word">{{keyword}}</text>
                  </view>
                </view>

              </view>

            </view>
          </block>
        </block>

        <!--显示搜索结果-->
        <block wx:elif="{{reshow == 2}}">
          <block wx:for="{{invitations}}" wx:key="inv">
            <view class='wrapper-inv flex-mid'>
              <view class='inv'>
                <view class='line1'>
                  <text class='wrappertags'>
                      <text class="usex iconfont {{item.sex == '男'? 'icon-nan': 'icon-nv'}}"></text>
                  <text class='uname'>{{item.user_name}} </text>
                  <text class='umajor'>{{item.major}}</text>
                  </text>

                </view>
                <view class='line2'>{{item.illustration}}</view>
                <view class='line3 flex-row'>
                  <view wx:for="{{item.key_words}}" wx:for-item="keyword">
                    <text class="word">{{keyword}}</text>
                  </view>
                </view>

              </view>

            </view>
          </block>
        </block>

        <!--没有结果-->
        <block wx:else>
          <view class='flex-mid noresult'>
            <text class='t-black'>无匹配结果</text>
          </view>
        </block>


      </view>
    </scroll-view>



  </swiper-item>

  <!--我的-->
  <swiper-item class="flex-mid">
    <scroll-view scroll-y scroll-with-animation 
                 class='wrapper-my {{empty === 1? "empty": ""}}'
                 style='height: {{tbodyHeight-35}}px'>
      <view wx:for="{{myinvs}}" class="icon-inv">
        <view class='icons'>
          <view class="icon1" bindtap='deleteinv' data-id='{{item.invitation_id}}' data-index='{{index}}'><text class='iconfont icon-shanchu'></text></view>
          <view class='icon2' bindtap='editinv' 
          data-id='{{item.invitation_id}}' data-index='{{index}}'
          data-uname='{{item.user_name}}' data-sex='{{item.sex}}'
          data-major='{{item.major}}' data-illu='{{item.illustration}}'
          data-keywords='{{item.key_words}}' data-contact='{{item.contact_information}}'
          ><text class='iconfont icon-bianji'></text></view>
        </view>
        <view class='my-wrapper-inv'>
          <view class='my-inv'>
            <view class='line1'>
              <text class='wrappertags'>
                <text class="usex iconfont {{item.sex == '男'? 'icon-nan': 'icon-nv'}}"></text>
                <text class='uname'>{{item.user_name}} </text>
                <text class='umajor'>{{item.major}}</text>
              </text>

            </view>
            <view class='line2'>{{item.illustration}}</view>
            <view class='line3 flex-row'>
              <view wx:for="{{item.key_words}}" wx:for-item="keyword">
                <text class="word">{{keyword}}</text>
              </view>
            </view>

          </view>

        </view>
      </view>

    </scroll-view>
  </swiper-item>
</swiper>
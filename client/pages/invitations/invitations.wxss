/* pages/invitations/invitations.wxss */
.topbar {
  height: 35px;
}
.tabtitle {
  display: inline-block;
  margin: 8rpx 60rpx;
  font-size: 15px;
}
.select-t {
  color: #00b26a;
  text-decoration: underline;
  font-weight: 700;
}
/*广场*/

.wrapper_s {
  font-size: 14px;
  margin-bottom: 15px;
  height: 40px;
  width: 100%;
  padding: 0 10rpx;
}
.form {
  box-sizing: border-box;
  width: 100%;
  padding: 0;
}
.wrapper_input {
  width: 50%;
  background-color: #f6f4f4;
  margin: 0 12px 4px 0;
  display: inline-block;
  box-sizing: border-box;
  height: 31px;
  border: 1px solid transparent;
  border-radius: 14px;
}
.icon_s {
  display: inline-block;
  float: left;
  height: 31px;
  line-height: 31px;
  width: 5%;
  margin: 0 4px 0 10px;
}
.input_search {
  float: right;
  display: inline-block;
  height: 100%;
  width: 80%;
  overflow: hidden; 
  text-overflow:ellipsis; 
  white-space: nowrap; 
}
.btn_search {
  display: inline-block;
  height: 31px;
  line-height: 31px;
  font-size: 14px;
  margin-left: 3px;
  border-radius: 14px;
  background: #333333;
  color: white;
  position: relative;
  top: -4px;
  width: 20%;
}
.wrapper-inv {
  width: 100%;
  margin-bottom: 50rpx;
}
.inv {
  /*box-sizing: border-box;*/
  height: 300rpx;
  width: 80%;
  padding: 18rpx 22rpx;
  color: white;
  box-shadow: 0 6px 10px #b5b4b4;
  border-radius: 10rpx;
  font-size: 14px;
  background-color: #333333;
}
.line1 {
  /*float: right;*/
  height: 54rpx;/*18%*/
  text-align: right;
}
.wrappertags {
  
  
}
.line2 {
  margin-top: 4px;
  height: 186rpx; /*62%*/
  line-height: 46.5rpx;/*186/4=46.5*/
  font-size: 16px;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
}
.line3 {
  height: 60rpx;/*20%*/
  display: flex;
  align-items: flex-end;
}
.wrapwords {
  text-align: right;
}
.word {
  position: relative;
  top: -7px;
  background: #00b26a;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
  margin-right: 4px;
  color: white;
}
.uname {
  color: white;
  background-color: #eb5528;
  height: 25px;
  line-height: 25px;
  padding: 1px 5px;
  border: 1px solid transparent;
  border-radius: 4px;
}
.usex {
  margin-right: 4px;
  
  height: 25px;
  line-height: 25px;
}
.umajor {
  color: white;
  background-color: #eb5528;
  height: 25px;
  line-height: 25px;
  padding: 1px 5px;
  border: 1px solid transparent;
  border-radius: 4px;
  margin-left: 4px;
}
.noresult {
  height: 100%;
  font-size: 14px;
}